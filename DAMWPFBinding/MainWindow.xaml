<Window x:Class="DAMWPFBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAMWPFBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="textBoxBinding" Content="TextBox Binding" Click="textBoxBinding_Click" />
        <Button x:Name="dataContextBinding" Content="DataContext Binding" Click="dataContextBinding_Click"  />
        <Button x:Name="codeBinding" Content="Code Binding" Click="codeBinding_Click"   />
    </StackPanel>
</Window>
